<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100sp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="210dp"
        android:layout_height="16dp"
        android:text=""
        android:textSize="10sp" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="97dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text=""
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="67dp"
        android:src="@drawable/ic_heart_filled_foreground"/>

    <TextView
        android:id="@+id/nloves"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:text="0"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="77dp"/>

    <ImageView
        android:id="@+id/repost"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="77dp"
        android:src="@drawable/ic_repost_foreground" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="357dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/ic_share_foreground" />

    <TextView
        android:id="@+id/nreposts"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:text="0"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="77dp"/>

</RelativeLayout>
