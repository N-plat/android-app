<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100sp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">


    <TextView
        android:id="@+id/respondToContactRequestUsername"
        android:layout_width="165dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/respondToContactRequestMessageText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/respondToContactRequestMessageText"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/respondToContactRequestMessageText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/accept_contact_request"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/accept_contact_request"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text=""
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accept_contact_request"/>

    <Button
        android:id="@+id/accept_contact_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_alignBaseline="@+id/reject_contact_request"
        android:layout_alignBottom="@+id/reject_contact_request"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintLeft_toRightOf="@+id/respondToContactRequestUsername"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp" />

    <Button
        android:id="@+id/reject_contact_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/accept_contact_request"
        android:layout_alignBottom="@+id/accept_contact_request"
        android:layout_toLeftOf="@+id/accept_contact_request"
        android:layout_toStartOf="@+id/accept_contact_request"
        app:layout_constraintLeft_toRightOf="@+id/accept_contact_request"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
